@model QLTT.Models.HuongDan

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MasvNavigation" class="control-label"></label>
                <select asp-for="Masv" class="form-control">
                    <option value="">-- Chon sinh vien --</option>
                    @{
                        List<SinhVien> sinhviens = ViewBag.sinhviens;
                        foreach (var sinhvien in sinhviens)
                        {
                            <option value="@sinhvien.Masv">@sinhvien.Hotensv</option>
                        }
                    }
                </select>
                <span asp-validation-for="Masv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MagvNavigation" class="control-label"></label>
                <select asp-for="Magv" class="form-control">
                    <option value="">-- Chon giao vien --</option>
                    @{
                        List<GiangVien> giangviens = ViewBag.giangviens;
                        foreach (var giangvien in giangviens)
                        {
                            <option value="@giangvien.Magv">@giangvien.Hotengv</option>
                        }
                    }
                </select>
                <span asp-validation-for="Magv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MadtNavigation" class="control-label"></label>
                <select asp-for="Madt" class="form-control">
                    <option value="">-- Chon de tai --</option>
                    @{
                        List<DeTai> deTais = ViewBag.detais;
                        foreach (var detai in deTais)
                        {
                            <option value="@detai.Madt">@detai.Tendt</option>
                        }
                    }
                </select>
                <span asp-validation-for="Madt" class="text-danger"></span>
            </div>
            <div class="form-group">
                Kết quả:
                <input asp-for="Ketqua" class="form-control" />
                <span asp-validation-for="Ketqua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>